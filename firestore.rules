rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function role() {
      return request.auth != null ? request.auth.token.role : null;
    }

    function isHealthWorker() {
      return role() == 'healthworker';
    }

    function isDoctor() {
      return role() == 'doctor';
    }

    function isSuperAdmin() {
      return role() == 'superadmin';
    }

    match /users/{userId} {
      allow read: if request.auth != null
        && (userId == request.auth.uid || isSuperAdmin());
      allow write: if isSuperAdmin();
    }

    match /patients/{patientId} {
      allow create: if isHealthWorker()
        && request.resource.data.healthWorkerId == request.auth.uid;
      allow read, update, delete: if isHealthWorker()
        && resource.data.healthWorkerId == request.auth.uid;
      allow read: if isDoctor()
        && resource.data.doctorId == request.auth.uid;
    }

    match /assessments/{assessmentId} {
      allow create: if isHealthWorker()
        && request.resource.data.healthWorkerId == request.auth.uid;
      allow read, update, delete: if isHealthWorker()
        && resource.data.healthWorkerId == request.auth.uid;
      allow read: if isDoctor()
        && resource.data.doctorId == request.auth.uid;
    }

    match /stats/{docId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}